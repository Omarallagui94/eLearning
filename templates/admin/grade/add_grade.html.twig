{% extends '@EasyAdmin/page/main.html.twig' %}

{% block content %}
    <div style="max-width: 500px; margin: 40px auto;">
        <h2 style="margin-bottom: 20px;">
            Add Grade for exam: {{ exam.name }}
        </h2>

        <div class="card" style="padding: 20px;">
            {{ form_start(form) }}

            <div style="margin-bottom: 15px;">
                {{ form_label(form.student) }}
                {{ form_widget(form.student, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.student) }}
            </div>

            <div style="margin-bottom: 15px;">
                {{ form_label(form.score) }}
                {{ form_widget(form.score, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.score) }}
            </div>

            <button type="submit" class="btn btn-success" style="width: 100%;">
                Save
            </button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
