{% extends 'base.html.twig' %}

{% block title %}Create Exam{% endblock %}

{% block body %}
<div class="container mt-5">
    <a href="{{ path('teacher_subject_exams', {'id': subject.id}) }}" class="btn btn-secondary mb-3">&larr; Back to Exams</a>

    <h1>Create Exam</h1>
    <p class="text-muted">For Subject: {{ subject.name }}</p>

    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_row(form.name) }}
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                         {{ form_row(form.examDate) }}
                    </div>
                    <div class="col-md-6 mb-3">
                         {{ form_row(form.durationMinutes) }}
                    </div>
                </div>
                <div class="mb-3">
                    {{ form_row(form.classroom) }}
                </div>
                
                <div class="d-grid mt-4">
                    <button class="btn btn-primary btn-lg">Create Exam</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
