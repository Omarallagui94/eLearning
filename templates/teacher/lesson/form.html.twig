{% extends 'base.html.twig' %}

{% block title %}New Lesson{% endblock %}

{% block body %}
<div class="container mt-5">
    <a href="{{ path('teacher_subject_show', {'id': subject.id}) }}" class="btn btn-secondary mb-3">&larr; Back to Subject</a>
    
    <h1>{{ lesson.id ? 'Edit Lesson' : 'Create New Lesson' }}</h1>
    <p class="text-muted">For Subject: {{ subject.name }}</p>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.title) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.content) }}
        </div>
        <button class="btn btn-primary">{{ lesson.id ? 'Update' : 'Create' }}</button>
    {{ form_end(form) }}
</div>
{% endblock %}
