{% extends 'base.html.twig' %}

{% block title %}{{ subject.name }} - Lessons{% endblock %}

{% block body %}
<div class="bg-white border-bottom shadow-sm mb-4">
    <div class="container py-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-2">
                        <li class="breadcrumb-item"><a href="{{ path('teacher_dashboard') }}" class="text-decoration-none">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ subject.name }}</li>
                    </ol>
                </nav>
                <h1 class="fw-bold mb-0">Lessons</h1>
                <p class="text-muted mb-0">Manage course materials for {{ subject.name }}</p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <a href="{{ path('teacher_lesson_new', {'id': subject.id}) }}" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Create New Lesson
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    {% if lessons is empty %}
        <div class="text-center py-5 bg-white rounded-3 shadow-sm border">
            <div class="mb-3">
                <i class="bi bi-folder2-open text-muted" style="font-size: 3rem;"></i>
            </div>
            <h4 class="text-muted">No lessons found.</h4>
            <p class="text-muted mb-4">Get started by adding your first lesson.</p>
            <a href="{{ path('teacher_lesson_new', {'id': subject.id}) }}" class="btn btn-outline-primary">
                Add Lesson
            </a>
        </div>
    {% else %}
        <div class="row g-4">
            {% for lesson in lessons %}
                <div class="col-12">
                    <div class="card shadow-sm hover-shadow transition-all">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="w-100 me-4">
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="bg-primary bg-opacity-10 text-primary rounded p-2 me-3">
                                            <i class="bi bi-file-text fs-4"></i>
                                        </div>
                                        <div>
                                            <h4 class="mb-0 fw-bold">{{ lesson.title }}</h4>
                                            <small class="text-muted">
                                                <i class="bi bi-clock me-1"></i> {{ lesson.createdAt|date('M d, Y') }}
                                            </small>
                                        </div>
                                    </div>
                                    
                                    {% if lesson.description %}
                                        <p class="text-muted mt-3 mb-3">{{ lesson.description }}</p>
                                    {% endif %}
                                    
                                    <div class="d-flex flex-wrap gap-2 mt-3">
                                        {% if lesson.content %}
                                            <button class="btn btn-sm btn-light text-primary border" type="button" data-bs-toggle="collapse" data-bs-target="#content-{{ lesson.id }}">
                                                <i class="bi bi-eye me-1"></i> View Content
                                            </button>
                                        {% endif %}
                                        
                                        {% if lesson.filePath %}
                                            <a href="{{ asset(lesson.filePath) }}" class="btn btn-sm btn-light text-success border" target="_blank">
                                                <i class="bi bi-download me-1"></i> Download File
                                            </a>
                                        {% endif %}
                                    </div>

                                    {% if lesson.content %}
                                        <div class="collapse mt-3" id="content-{{ lesson.id }}">
                                            <div class="card card-body bg-light border-0">
                                                {{ lesson.content|nl2br }}
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical fs-5"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                        {# Edit implementation later #}
                                        <li><a class="dropdown-item" href="#">Edit</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-danger" href="#">Delete</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
