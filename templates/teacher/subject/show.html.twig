{% extends 'base.html.twig' %}

{% block title %}Subject: {{ subject.name }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <a href="{{ path('teacher_dashboard') }}" class="btn btn-secondary mb-3">&larr; Back to Dashboard</a>
    <h1>{{ subject.name }}</h1>
    <p class="lead">{{ subject.description }}</p>

    <hr>

    <div class="row">
        <div class="col-md-6">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3>Lessons</h3>
                <a href="{{ path('teacher_lesson_new', {'id': subject.id}) }}" class="btn btn-success btn-sm"><i class="bi bi-plus"></i> New Lesson</a>
            </div>
            
            {% if subject.lessons is empty %}
                <p class="text-muted">No lessons yet.</p>
            {% else %}
                <ul class="list-group">
                {% for lesson in subject.lessons %}
                     <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h5>{{ lesson.title }}</h5>
                                <small class="text-muted">{{ lesson.content|striptags|slice(0, 50) }}...</small>
                            </div>
                            <div class="btn-group">
                                <a href="{{ path('teacher_lesson_edit', {'id': lesson.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                                <form method="post" action="{{ path('teacher_lesson_delete', {'id': lesson.id}) }}" onsubmit="return confirm('Are you sure you want to delete this lesson?');" style="display:inline-block">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lesson.id) }}">
                                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                     </li>
                {% endfor %}
                </ul>
            {% endif %}
        </div>

        <div class="col-md-6">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3>Exams</h3>
                <a href="{{ path('teacher_exam_new', {'id': subject.id}) }}" class="btn btn-success btn-sm"><i class="bi bi-plus"></i> New Exam</a>
            </div>

            {% if subject.exams is empty %}
                <p class="text-muted">No exams yet.</p>
            {% else %}
                <ul class="list-group">
                {% for exam in subject.exams %}
                     <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5><a href="{{ path('teacher_exam_show', {'id': exam.id}) }}">{{ exam.name }}</a></h5>
                                <small class="text-muted">{{ exam.examDate|date('Y-m-d H:i') }}</small>
                            </div>
                            <div class="btn-group">
                                <a href="{{ path('teacher_exam_edit', {'id': exam.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                                <form method="post" action="{{ path('teacher_exam_delete', {'id': exam.id}) }}" onsubmit="return confirm('Are you sure you want to delete this exam?');" style="display:inline-block">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ exam.id) }}">
                                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                     </li>
                {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
