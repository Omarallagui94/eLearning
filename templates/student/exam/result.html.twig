{% extends 'base.html.twig' %}

{% block title %}Exam Results{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <i class="bi bi-trophy-fill text-warning mb-3" style="font-size: 4rem;"></i>
                <h1 class="display-5 fw-bold text-dark">Exam Completed!</h1>
                <p class="lead text-muted">Your answers have been submitted successfully.</p>
            </div>

            <div class="card border-0 shadow-sm overflow-hidden mb-4">
                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-md-6 bg-light p-5 d-flex flex-column justify-content-center text-center border-end">
                            <h3 class="text-muted text-uppercase small fw-bold mb-2">Total Score</h3>
                            <div class="display-3 fw-bold text-primary">{{ attempt.score }}</div>
                            <div class="text-muted">points</div>
                        </div>
                        <div class="col-md-6 p-5">
                            <h4 class="fw-bold mb-4">{{ exam.name }}</h4>
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2 d-flex justify-content-between">
                                    <span class="text-muted">Status:</span>
                                    <span class="badge bg-success rounded-pill">Completed</span>
                                </li>
                                <li class="mb-2 d-flex justify-content-between">
                                    <span class="text-muted">Started:</span>
                                    <span>{{ attempt.startedAt|date('H:i') }}</span>
                                </li>
                                <li class="mb-2 d-flex justify-content-between">
                                    <span class="text-muted">Finished:</span>
                                    <span>{{ attempt.submittedAt|date('H:i') }}</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2 col-md-6 mx-auto">
                <a href="{{ path('student_dashboard') }}" class="btn btn-primary rounded-pill">
                    Return to Dashboard
                </a>
                <a href="{{ path('student_exams') }}" class="btn btn-outline-secondary rounded-pill">
                    View Other Exams
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
