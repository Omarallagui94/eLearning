{% extends 'base.html.twig' %}

{% block title %}Taking: {{ exam.name }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form method="post">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white p-4 border-bottom-0">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                             <span className="badge bg-primary bg-gradient">{{ exam.subject.name }}</span>
                            <span class="text-muted small"><i class="bi bi-clock me-1"></i> {{ exam.durationMinutes }} mins</span>
                        </div>
                        <h1 class="h2 fw-bold mb-0">{{ exam.name }}</h1>
                    </div>
                    <div class="card-body p-4">
                        <div class="alert alert-warning border-0 d-flex align-items-center" role="alert">
                             <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                             <div>
                                 <strong>Important:</strong> Answer all questions before submitting.
                             </div>
                        </div>
                    </div>
                </div>

                {% for question in exam.questions %}
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body p-4">
                            <h5 class="fw-bold mb-3">Question {{ loop.index }}</h5>
                            <p class="mb-3 lead" style="font-size: 1.1rem;">{{ question.questionText }}</p>
                            
                            <div class="mt-3">
                                {% if question.type == 'mcq' %}
                                    {# Assuming generic choices stored in json or text? Entity says array. #}
                                    {% for choice in question.choices %}
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="radio" name="answers[{{ question.id }}]" id="q{{ question.id }}_{{ loop.index }}" value="{{ choice }}">
                                            <label class="form-check-label" for="q{{ question.id }}_{{ loop.index }}">
                                                {{ choice }}
                                            </label>
                                        </div>
                                    {% endfor %}
                                    
                                {% elseif question.type == 'tf' %}
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="radio" name="answers[{{ question.id }}]" id="q{{ question.id }}_true" value="true">
                                        <label class="form-check-label" for="q{{ question.id }}_true">True</label>
                                    </div>
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="radio" name="answers[{{ question.id }}]" id="q{{ question.id }}_false" value="false">
                                        <label class="form-check-label" for="q{{ question.id }}_false">False</label>
                                    </div>

                                {% else %}
                                    {# Short Answer #}
                                    <textarea class="form-control" name="answers[{{ question.id }}]" rows="3" placeholder="Type your answer here..."></textarea>
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-footer bg-white border-top-0 px-4 pb-3 pt-0">
                            <small class="text-muted">{{ question.points }} points</small>
                        </div>
                    </div>
                {% endfor %}

                <div class="d-grid gap-2 mb-5">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm" onclick="return confirm('Are you sure you want to submit your exam?');">
                        Submit Exam <i class="bi bi-check-circle-fill ms-2"></i>
                    </button>
                    <a href="{{ path('student_dashboard') }}" class="btn btn-link text-decoration-none text-muted">Cancel and Return to Dashboard</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
