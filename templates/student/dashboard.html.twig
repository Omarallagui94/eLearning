{% extends 'base.html.twig' %}

{% block title %}Student Dashboard{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row mb-5 align-items-center">
        <div class="col-md-8">
            <h1 class="display-4 fw-bold text-dark mb-2">Welcome Back!</h1>
            <p class="lead text-muted">Here are your assigned courses and upcoming exams.</p>
        </div>
        <div class="col-md-4 text-md-end">
            <div class="card border-0 bg-primary bg-gradient text-white shadow-sm">
                <div class="card-body p-4">
                    <h5 class="card-title mb-0"><i class="bi bi-calendar-event me-2"></i> {{ "now"|date("l, F j, Y") }}</h5>
                </div>
            </div>
        </div>
    </div>

    <section class="mb-5">
        <h2 class="h3 fw-bold text-dark mb-4 border-bottom pb-2">My Courses</h2>
        
        {% if subjects is empty %}
             <div class="text-center py-5 bg-light rounded-3">
                <i class="bi bi-journal-x text-muted mb-3" style="font-size: 3rem;"></i>
                <h4 class="text-muted">No courses assigned yet.</h4>
            </div>
        {% else %}
            <div class="row g-4">
                {% for subject in subjects %}
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 border-0 shadow-sm hover-card transition-all">
                            <div class="card-body p-4">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="icon-square bg-light text-primary rounded-3 p-3 me-3">
                                        <i class="bi bi-book fs-4"></i>
                                    </div>
                                    <h3 class="card-title h5 fw-bold mb-0 text-truncate">{{ subject.name }}</h3>
                                </div>
                                <p class="card-text text-muted mb-4 line-clamp-3">
                                    {{ subject.description|default('No description provided.')|striptags }}
                                </p>
                                <a href="{{ path('student_subject_show', {'id': subject.id}) }}" class="btn btn-primary w-100 rounded-pill">
                                    View Lessons <i class="bi bi-arrow-right ms-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </section>

    <section>
        <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
            <h2 class="h3 fw-bold text-dark m-0">Upcoming Exams</h2>
            <a href="{{ path('student_exams') }}" class="btn btn-outline-primary btn-sm rounded-pill">View All Exams</a>
        </div>
        
        <div class="alert alert-info border-0 bg-white shadow-sm d-flex align-items-center" role="alert">
             <i class="bi bi-info-circle-fill text-info fs-4 me-3"></i>
             <div>
                 Check the <a href="{{ path('student_exams') }}" class="alert-link">Exams page</a> for your scheduled assessments.
             </div>
        </div>
    </section>
</div>

<style>
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important;
    }
    .transition-all {
        transition: all 0.3s ease;
    }
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
{% endblock %}
